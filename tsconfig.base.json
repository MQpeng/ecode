{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["ES2022", "DOM"],
    "composite": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules", "dist", "**/dist", "**/*.test.ts"],
  "references": []
}
