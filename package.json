{
  "name": "@tonyer/ecode",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest --run",
    "bench": "vitest bench",
    "lint": "eslint . --ext .ts",
    "clean": "rimraf dist",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "addp": "sh ./scripts/git-add-prettier",
    "prepare": "husky install"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types-node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.30.0",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0"
  },
  "dependencies": {
    "es-toolkit": "^1.43.0"
  }
}
