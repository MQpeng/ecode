{
  "name": "@tonyer/ecode-monorepo",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "pnpm -w install && pnpm -w -r build",
    "build": "pnpm -r --filter ./... run build",
    "test": "pnpm -r --filter ./... run test",
    "lint": "pnpm -r --filter ./... run lint",
    "clean": "pnpm -r --filter ./... run clean",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "prepare": "pnpm -w -r build"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "tsup": "^8.5.1",
    "vitest": "^1.6.0",
    "@types/node": "^20.6.0",
    "eslint": "^8.49.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "prettier": "^3.7.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.30.0",
    "rimraf": "^5.0.0"
  }
}
