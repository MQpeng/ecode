{
  "name": "@tonyer/ecode",
  "version": "0.0.1-beta.2",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.6.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MQpeng/ecode"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest --run",
    "bench": "vitest bench",
    "lint": "eslint . --ext .ts",
    "clean": "rimraf dist",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "addp": "sh ./scripts/git-add-prettier",
    "prepare": "husky install .husky"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "es-toolkit": "^1.43.0"
  }
}
